body { font-family: Arial, sans-serif; background: #f4f9ef; }
.container { max-width: 500px; margin: 3rem auto; background: #fff; padding: 2rem; border-radius: 12px; box-shadow: 0 4px 20px #93d66b55;}
h1 { color: #4a7c12; text-align: center;}
nav { text-align: center; margin-bottom: 2rem;}
nav button { background: #93d66b; color: #fff; border: none; padding: 12px 18px; margin: 0 10px; border-radius: 7px; cursor: pointer;}
nav button:hover { background: #4a7c12;}
.section { margin-bottom: 2rem; }
ul { padding-left: 1.2rem;}
form label, form input, form textarea, form button { display:block; width:100%; margin-bottom:1rem;}
form button { background: #4a7c12; color: #fff; border: none; border-radius: 6px; padding: 0.8rem; cursor: pointer;}
#msg { color: #4a7c12; font-weight: bold;}
function showSection(id) {
  document.querySelectorAll('.section').forEach(
    sec => sec.style.display = 'none'
  );
  document.getElementById(id).style.display = 'block';
}

document.getElementById('contactForm').onsubmit = function(e) {
  e.preventDefault();
  document.getElementById('msg').textContent = 'Message sent! (Demo only)';
};
