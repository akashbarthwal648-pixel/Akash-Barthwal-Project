<body>
  <div class="container">
    <h2>API Interface Demo</h2>
    <label for="userInput">Enter Value:</label>
    <input type="text" id="userInput" placeholder="e.g., city name">
    <button id="apiBtn">Get API Data</button>
    <div id="result"></div>
  </div>
  <script>
    document.getElementById("apiBtn").onclick = function() {
      var value = document.getElementById("userInput").value;
      var result = document.getElementById("result");
      result.innerHTML = "Loading...";
      
      // Example: Public API for demo (weather for London)
      // Replace the URL with your own API endpoint and parameters!
      fetch("https://api.openweathermap.org/data/2.5/weather?q=" + value + "&appid=YOUR_API_KEY&units=metric")
        .then(res => res.json())
        .then(data => {
          if (data.main && data.weather) {
            result.innerHTML = "<b>Temp:</b> " + data.main.temp + "Â°C<br>" +
                               "<b>Weather:</b> " + data.weather[0].main;
          } else {
            result.innerHTML = "No data found for this value.";
          }
        })
        .catch(() => result.innerHTML = "Error fetching API data");
    }
  </script>
</body>
